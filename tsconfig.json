{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "backend/apiService.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
